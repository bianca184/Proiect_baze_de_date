<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" prefWidth="400" prefHeight="400">
    <Label text="Adaugare Activitate" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <Label text="Nume Grup:" />
    <TextField fx:id="numeGrupField" />


    <Label text="Data Începerii:" />
    <TextField fx:id="dataInceperiiField" promptText="YYYY-MM-DD HH:MM:SS" />

    <Label text="Număr Minim Participanți:" />
    <TextField fx:id="nrMinimParticipantiField" />

    <Label text="Timp Anunțare:" />
    <TextField fx:id="timpAnuntareField" promptText="HH:MM:SS" />

    <Label text="Descriere:" />
    <TextArea fx:id="descriereArea" prefRowCount="4" />

    <Button text="Adaugă Activitate" onAction="#handleAdaugaActivitateController" />
</VBox>
